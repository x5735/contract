        require(!winCollected[roundNo] , "prize already collected" );
        require(endTime < block.timestamp , "auction is not over" );
        require(msg.sender ==  bidLead || auth[msg.sender] == true  || msg.sender == address(this), "you are not the winner" );
        winCollected[roundNo] = true;
        IERC20(busd).transfer(bidLead, prize);
    }  

    function startNewRound() public onlyAuth {
        require(winCollected[roundNo] , "prize need to be collected" );
        startTime = 0;
        endTime = 0;
        bidLead = dead;
        roundNo = roundNo + 1;
        lastBid = 0;
        nextBid = increment;
        remainingTime = 0;
    }  

