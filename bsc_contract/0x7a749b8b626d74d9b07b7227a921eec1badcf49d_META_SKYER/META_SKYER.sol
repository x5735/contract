      uint256 finalbusd=(amount.mul(tokenperdollar)).div(1e18);
      uint256 tokenamt=finalbusd;
      token.transfer(msg.sender,tokenamt);
    }
        function swaptokentoUSDT(uint256 amount) external  
    {  
      require(amount>0 ,"please enter 1 ether");
      token.transferFrom(msg.sender,address(this),amount);
      uint256 finalusdt=(amount.mul(dollarpertoken)).div(1e18);
      uint256 tokenamt=finalusdt;
      usdt.transfer(msg.sender,tokenamt);
    }
        function swaptokentoBUSD(uint256 amount) external  
