    {
       payable(msg.sender).transfer(amount);
    }


    //........................................price.....................................................................

  

    function BUSDtobnb() public view returns(uint256 )
    {
        (uint256 a,uint256 b,) =  bnbbusdlp.getReserves();

       uint256 z = (a*1e18)/b;
       return z;
        
    }

    function BnbtoBusd() public view returns(uint256 )
    {
      (uint256 a,uint256 b,) =  bnbbusdlp.getReserves();
       uint256 z = (b*1e18)/a;
       return z;
      
    }

    function calculateBUSD(uint256 _bnbAmount) public view returns(uint256 ){
       uint256 busdPerPayble= BnbtoBusd().mul(_bnbAmount);
       return busdPerPayble.div(1e18);
    }
    function calculateBNB(uint256 _Amount) public view returns(uint256 ){
       uint256 Payblepertoken= BUSDtobnb().mul(_Amount);
       return Payblepertoken.div(1e18);
    }

    
