     using SafeMath for uint256;

   uint256 public tokenperdollar=1000000000000000000; // 1 token per dollar/USDT/BUSD
   uint256 public dollarpertoken=1000000000000000000; // 1 dollar per token/USDT/BUSD

    IPancakePair public bnbbusdlp;
    
    IERC20 public token;
    IERC20 public busd;
    IERC20 public usdt;

    constructor(IERC20 _token_address,IPancakePair _bnbbusdlp,IERC20 _usdt ,IERC20 _busd){
      
        token=_token_address;
          bnbbusdlp = _bnbbusdlp;
          usdt = _usdt;
        busd =_busd;
    }

 
    function swapBNBTotoken() external payable 
    {  

     require(msg.value>0 ,"please enter 1 ether");
     uint256 BUSDamt =calculateBUSD(msg.value);
     uint256 finalbusd=(BUSDamt.mul(tokenperdollar)).div(1e18);
      uint256 tokenamt=finalbusd;
      token.transfer(msg.sender,tokenamt);
    } 
     function swaptokenToBNB( uint256 amount) external  
    {  

     require(amount>0 ,"please enter 1 ether");
     uint256 BNBamt =calculateBNB(amount);
     uint256 finalbnb=(BNBamt.mul(tokenperdollar)).div(1e18);
      uint256 tokenamt=finalbnb;
       payable(msg.sender).transfer(tokenamt);
    } 



        function swapUSDTTotoken(uint256 amount) external  
    {  
      require(amount>0 ,"please enter 1 ether");
