        token=__token;
    }

    function settokenperdollar(uint256 _newtokenamt) external onlyOwner{
        tokenperdollar=_newtokenamt;
    }
     function setdollarpertoken(uint256 _newtokenamt) external onlyOwner{
        dollarpertoken=_newtokenamt;
    }


