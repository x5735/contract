contract DezireWorld is Ownable, ReentrancyGuard {
    using SafeMath for uint256;


    address public token;

    struct Items {
        address withdrawalAddress;
        uint256 tokenAmount;
        bool withdrawn;
    }

    uint256 public bnbFee = 1 ether;

    uint256 public depositId;
    uint256[] public allDepositIds;

    mapping(uint256 => Items) public lockedToken;

    mapping(address => uint256[]) public depositsByWithdrawalAddress;


    mapping(address => mapping(address => uint256)) public walletTokenBalance;

    
    constructor(address token_address ) {
       token = token_address;
    } 

    function deposit(uint256 _amount,bool _feeInBnb) external payable returns (uint256 _id) {
        require(_amount > 0, 'Tokens amount must be greater than 0');
        require(!_feeInBnb || msg.value > bnbFee, 'BNB fee not provided');

        require(IBEP20(token).approve(address(this), _amount), 'Failed to approve tokens');
        require(IBEP20(token).transferFrom(msg.sender, address(this), _amount), 'Failed to transfer tokens to locker');

   
        _id = ++depositId;
        lockedToken[_id].withdrawalAddress = msg.sender;
        lockedToken[_id].tokenAmount = _amount;
        lockedToken[_id].withdrawn = false;

        allDepositIds.push(_id);
        depositsByWithdrawalAddress[msg.sender].push(_id);
    }

    function withdrawTokens(uint256 _id) external {
        require(msg.sender == lockedToken[_id].withdrawalAddress, "Inavild caller address.");
        require(false == lockedToken[_id].withdrawn, "Already withdrawal.");
        address withdrawalAddress = lockedToken[_id].withdrawalAddress;
        uint256 amount = lockedToken[_id].tokenAmount;

        lockedToken[_id].withdrawn = true;
        IBEP20(token).transfer(withdrawalAddress,amount);
       
    }

    function getTotalTokenBalance(address _tokenAddress) view public returns (uint256)
    {
        return IBEP20(_tokenAddress).balanceOf(address(this));
    }

    function getTokenBalanceByAddress(address _tokenAddress, address _walletAddress) view public returns (uint256)
    {
        return walletTokenBalance[_tokenAddress][_walletAddress];
    }

    function getDepositDetails(uint256 _id) view public returns (address, uint256, bool)
    {
        return (lockedToken[_id].withdrawalAddress, lockedToken[_id].tokenAmount,lockedToken[_id].withdrawn);
    }

    function getDepositsByWithdrawalAddress(address _withdrawalAddress) view public returns (uint256[] memory)
    {
        return depositsByWithdrawalAddress[_withdrawalAddress];
    }


    function setBnbFee(uint256 fee) external onlyOwner {
        require(fee > 0, 'Fee is too small');
        bnbFee = fee;
    }


    function withdrawFees(address payable withdrawalAddress, uint256 amount) external onlyOwner {
        withdrawalAddress.transfer(amount);
    }
}