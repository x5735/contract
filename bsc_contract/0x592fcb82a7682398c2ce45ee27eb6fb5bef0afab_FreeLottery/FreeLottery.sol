contract SignatureVerifiable {
    using SafeMath for uint256;

    bytes32 public constant DOMAIN_TYPEHASH =
        keccak256(
            abi.encodePacked(
                "EIP712Domain(",
                "string name,",
                "string version,",
                "uint256 chainId,",
                "address verifyingContract",
                ")"
            )
        );

    bytes32 public constant DOMAIN_NAME = keccak256("Lottery");
    bytes32 public constant DOMAIN_VERSION = keccak256("1");
    bytes32 public DOMAIN_SEPARATOR;
    address public verifyAddress;

    /**
     * @notice Recover the signatory from a signature
     * @param hash bytes32
     * @param v uint8
     * @param r bytes32
     * @param s bytes32
     */
    function getSignatory(
        bytes32 hash,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) internal view returns (address) {
        bytes32 digest = keccak256(
            abi.encodePacked("\x19\x01", DOMAIN_SEPARATOR, hash)
        );
        address signatory = ecrecover(digest, v, r, s);
        // Ensure the signatory is not null
        require(signatory != address(0), "INVALID_SIG");
        return signatory;
    }
}

contract FreeLottery is Ownable, SignatureVerifiable{
    
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    struct LotteryInfo{
        address owner;
        address tokenAddress;
        uint256 token;
        uint256 totalNum;
        uint256 unitPrice;
        uint256 lotteryType;
        bool isReceive;
        address receiveAddress; 
    }

    mapping(uint256 => LotteryInfo) public LotteryLs;

    event FreeReleaseLotteryEvent(address sender,uint256 lotteryId,address tokenAddress,uint256 token,uint256 totalNum,uint256 unitPrice,uint256 lotteryType);

    event FreeAcceptAwardEvent(address sender,uint256 lotteryId,uint256 userId);

    event FreeRetrieveEvent(address sender,uint256 lotteryId,uint256 userId);

    constructor(){
        uint256 currentChainId = getChainId();
        DOMAIN_SEPARATOR = keccak256(
            abi.encode(
                DOMAIN_TYPEHASH,
                DOMAIN_NAME,
                DOMAIN_VERSION,
                currentChainId,
                this
            )
        );
    }
    
    function getChainId() public view returns (uint256 id) {
        assembly {
            id := chainid()
        }
    }

    function verifyReleaseLottery(
        address sender,
        uint256 lotteryId,
        uint256 userId,
        address tokenAddress,
        uint256 token,
        uint256 totalNum,
        uint256 unitPrice,
        uint256 lotteryType,
        uint8 v,
        uint256 _r,
        uint256 _s
    ) internal view returns (bool) {
        bytes32 r = bytes32(_r);
        bytes32 s = bytes32(_s);
        bytes32 hash = keccak256(
            abi.encode(
                keccak256(
                    abi.encodePacked("ReleaseLottery(address sender,uint256 lotteryId,uint256 userId,address tokenAddress,uint256 token,uint256 totalNum,uint256 unitPrice,uint256 lotteryType)")
                ),
                sender,
                lotteryId,
                userId,
                tokenAddress,
                token,
                totalNum,
                unitPrice,
                lotteryType
            )
        );
        if (getSignatory(hash, v, r, s) == verifyAddress) {
            return true;
        } else {
            return false;
        }
    }

    function verifyWithdrawProceeds(
        address sender,
        uint256 lotteryId,
        uint256 userId,
        uint8 v,
        uint256 _r,
        uint256 _s
    ) internal view returns (bool) {
        bytes32 r = bytes32(_r);
        bytes32 s = bytes32(_s);
        bytes32 hash = keccak256(
            abi.encode(
                keccak256(
                    abi.encodePacked("WithdrawProceeds(address sender,uint256 lotteryId,uint256 userId)")
                ),
                sender,
                lotteryId,
                userId
            )
        );
        if (getSignatory(hash, v, r, s) == verifyAddress) {
            return true;
        } else {
            return false;
        }
    }
    
    function verifyRetrieve(
        address sender,
        uint256 lotteryId,
        uint256 userId,
        uint8 v,
        uint256 _r,
        uint256 _s
    ) internal view returns (bool) {
        bytes32 r = bytes32(_r);
        bytes32 s = bytes32(_s);
        bytes32 hash = keccak256(
            abi.encode(
                keccak256(
                    abi.encodePacked("Retrieve(address sender,uint256 lotteryId,uint256 userId)")
                ),
                sender,
                lotteryId,
                userId
            )
        );
        if (getSignatory(hash, v, r, s) == verifyAddress) {
            return true;
        } else {
            return false;
        }
    }

    function ReleaseLottery(address sender,uint256 lotteryId,uint256 userId, address tokenAddress,uint256 token,uint256 totalNum,uint256 unitPrice,uint256 lotteryType
        ,uint8 v,uint256 r,uint256 s
    ) public payable{
        require(msg.sender == sender, "invalid sender.");
        require(verifyReleaseLottery(sender,lotteryId,userId,tokenAddress,token,totalNum,unitPrice,lotteryType, v, r, s), "invalid signature.");
        if(lotteryType == 6){
            require(msg.value == token,"invalid value.");
        }else{
            IERC20(tokenAddress).safeTransferFrom(sender, address(this), token);
        }
        LotteryInfo storage lottery =  LotteryLs[lotteryId];
        lottery.owner = sender;
        lottery.tokenAddress = tokenAddress;
        lottery.token = token;
        lottery.totalNum = totalNum;
        lottery.unitPrice = unitPrice;
        lottery.lotteryType = lotteryType;
        emit FreeReleaseLotteryEvent(sender,lotteryId,tokenAddress,token,totalNum,unitPrice,lotteryType);
    }

    function AcceptAward(address sender,uint256 lotteryId,uint256 userId
        ,uint8 v,uint256 r,uint256 s
        ) public {
        require(msg.sender == sender, "invalid sender.");
        require(verifyWithdrawProceeds(sender,lotteryId,userId, v, r, s), "invalid signature.");
        LotteryInfo storage lottery =  LotteryLs[lotteryId];
        require(lottery.isReceive == false,"received.");
        lottery.isReceive = true;
        lottery.receiveAddress = sender;
        if(lottery.lotteryType == 6){
            payable(sender).transfer(lottery.token);
        }else{
            IERC20(lottery.tokenAddress).safeTransfer(sender, lottery.token);
        }
        emit FreeAcceptAwardEvent(sender,lotteryId,userId);
    }

    function Retrieve(address sender,uint256 lotteryId,uint256 userId
        ,uint8 v,uint256 r,uint256 s
        ) public{
        require(msg.sender == sender, "invalid sender.");
        require(verifyRetrieve(sender,lotteryId,userId, v, r, s), "invalid signature.");
        LotteryInfo storage lottery =  LotteryLs[lotteryId];
        require(lottery.owner == sender,"not owner");
        require(lottery.isReceive == false,"status error.");
        lottery.isReceive = true;
        lottery.receiveAddress = sender;
        if(lottery.lotteryType == 6){
            payable(sender).transfer(lottery.token);
        }else{
            IERC20(lottery.tokenAddress).safeTransfer(sender, lottery.token);
        }
        emit FreeRetrieveEvent(sender,lotteryId,userId);
    }
    
    function SetVerifyAddress(address _addr) public onlyOwner {
        require(_addr != address(0), "invalid addr.");
        verifyAddress = _addr;
    }

    function WithdrawToken(
        address token,
        address recipient,
        uint256 amount
    ) public onlyOwner {
        IERC20(token).safeTransfer(recipient, amount);
    }

    function WithdrawBNB(address recipient,uint256 amount) external onlyOwner {
        require(recipient != address(0),"from the zero address");
        (bool success, ) = payable(recipient).call{
            value: amount//address(this).balance
        }("");
        require(success, "TRANSFER_FAILED");
    }

}