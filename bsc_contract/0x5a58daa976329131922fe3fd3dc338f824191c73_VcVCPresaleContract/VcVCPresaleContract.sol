contract VcVCPresaleContract is Ownable {
    function safeTransfer(address token, address to, uint256 value) internal {
        (bool success, bytes memory data) = token.call(
            abi.encodeWithSelector(0xa9059cbb, to, value)
        );
        require(
            success && (data.length == 0 || abi.decode(data, (bool))),
            "TransferHelper: TRANSFER_FAILED"
        );
    }

    function safeTransferFrom(
        address token,
        address from,
        address to,
        uint256 value
    ) internal {
        (bool success, bytes memory data) = token.call(
            abi.encodeWithSelector(0x23b872dd, from, to, value)
        );
        require(
            success && (data.length == 0 || abi.decode(data, (bool))),
            "TransferHelper: TRANSFER_FROM_FAILED"
        );
    }

    using EnumerableSet for EnumerableSet.UintSet;
    using Counters for Counters.Counter;

    Counters.Counter public idCounter;

    uint256 public starttime;
    uint256 public endtime;
    address public tokenA;
    address public tokenB;

    uint256 public payAmountA = 1e18;
    uint256 public payAmountB = 1e18;
    uint256 public rewardPayAmountB = 1e18;

    uint256 public limit_total = 100;
    uint256 public limit_single = 1;
    uint256 public limit_min_ref = 5;

    uint256 public total;

    mapping(uint256 => address) public ownerOf;

    mapping(address => EnumerableSet.UintSet) idsMap;
    mapping(address => EnumerableSet.UintSet) rewardIdsMap;

    event Withdrawn(address indexed user, uint256 amount);
    event Bind(address indexed fa, address indexed ca);

    address constant firstAddress = 0x0000000000000000000000000000000000000001;
    mapping(address => address) refMap;
    mapping(address => address[]) teamMap;

    //

    constructor(
        address tokenA_,
        address tokenB_,
        uint256 starttime_,
        uint256 endtime_
    ) {
        idCounter.reset(1);
        //
        starttime = starttime_;
        endtime = endtime_;
        tokenA = tokenA_;
        tokenB = tokenB_;
    }

    //
    function setTime(uint256 _start, uint _end) external onlyOwner {
        starttime = _start;
        endtime = _end;
    }

    function setUserMintCount(uint _count) external onlyOwner {
        limit_single = _count;
    }

    function setTotalMintCount(uint _count) external onlyOwner {
        limit_total = _count;
    }

    function setMintCost(
        uint256 _amountA,
        uint256 _amountB
    ) external onlyOwner {
        payAmountA = _amountA;
        payAmountB = _amountB;
    }

    function setMintRewardCost(uint256 _amountB) external onlyOwner {
        rewardPayAmountB = _amountB;
    }

    function withdraw(address _token, address _to, uint256 _amount)external onlyOwner {
        safeTransfer(_token, _to, _amount);
    }

    //

    function _bind(address f, address c) internal {
        if (refMap[c] != address(0)) {
            return;
        }

        require(refMap[c] == address(0), "already binded");
        refMap[c] = f;
        teamMap[f].push(c);
        emit Bind(f, c);
    }

    modifier checkTime() {
        require(
            block.timestamp >= starttime && block.timestamp <= endtime,
            "time"
        );
        _;
    }

    function _getId() internal returns (uint256) {
        uint256 currentId = idCounter.current();
        idCounter.increment();
        return currentId;
    }

    function mint(address _referral) external {
        require(total < limit_total, "total limit");
        if (teamMap[msg.sender].length == 0) {
            _bind(_referral, msg.sender);
        }
        EnumerableSet.UintSet storage ids = idsMap[msg.sender];
        require(ids.length() < limit_single, "address limit");
        uint256 currentId = _getId();
        ids.add(currentId);
        total++;
        ownerOf[currentId] = msg.sender;
        safeTransferFrom(tokenA, msg.sender, address(this), payAmountA);
        safeTransferFrom(tokenB, msg.sender, address(this), payAmountB);
    }

    function mintReward() external {
        require(total < limit_total, "total limit");
        uint256 teamNum = teamMap[msg.sender].length;
        require(teamNum >= limit_min_ref, "min");
        require(idsMap[msg.sender].length() > 0, "not qualified");
        uint256 max = teamNum / limit_min_ref;
        EnumerableSet.UintSet storage ids = rewardIdsMap[msg.sender];
        require(ids.length() < max, "not qualified #2");
        uint256 currentId = _getId();
        ids.add(currentId);
        total++;
        ownerOf[currentId] = msg.sender;
        safeTransferFrom(tokenB, msg.sender, address(this), rewardPayAmountB);
    }

    function getMintCount(
        address _addr
    ) external view returns (uint256, uint256) {
        return (idsMap[_addr].length(), rewardIdsMap[_addr].length());
    }

    function getMintIds(
        address _addr
    ) external view returns (uint256[] memory, uint256[] memory) {
        return (idsMap[_addr].values(), rewardIdsMap[_addr].values());
    }

    function getReferrer(address _addr) external view returns (address) {
        return refMap[_addr];
    }

    function getTeamLength(address _addr) external view returns (uint256) {
        return teamMap[_addr].length;
    }

    function getTeam(
        address _addr,
        uint256 pageNo,
        uint256 pageSize
    ) external view returns (address[] memory team) {
        uint256 max = teamMap[_addr].length;
        if (max == 0 || pageSize == 0) {
            return new address[](0);
        }
        uint256 start = 0;
        uint256 end = 0;
        start = pageNo * pageSize;
        end = start + pageSize;
        if (end > max) {
            end = max;
        }
        team = new address[](end - start);
        uint256 index;
        for (; start < end; start++) {
            team[index] = teamMap[_addr][start];
            index++;
        }
    }
